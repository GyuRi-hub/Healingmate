<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backimage"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/mainLayout2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="교환 일기"
            android:fontFamily="@font/mainfont"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <ImageButton
            android:id="@+id/writebutton"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="177dp"
            android:layout_weight="1"
            android:background="@drawable/pen"
            android:text="작성"
            android:textColor="@color/black" />

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="177dp"
            android:layout_weight="1"
            android:background="@drawable/list"
            android:text="목록"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="401dp"
        android:layout_height="65dp"
        android:layout_below="@+id/mainLayout2"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/mainbutton1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:background="@drawable/main"
            android:scaleType="center" />

        <ImageButton
            android:id="@+id/sharebutton1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:background="@drawable/share"
            android:scaleType="center" />

        <ImageButton
            android:id="@+id/secretbutton1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:background="@drawable/secret" />

        <ImageButton
            android:id="@+id/bookbutton1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:background="@drawable/book" />

        <ImageButton
            android:id="@+id/settingbutton1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:background="@drawable/setting" />

    </LinearLayout>


</RelativeLayout>
