<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnnouncementActivity">

    <LinearLayout
        android:layout_width="343dp"
        android:layout_height="453dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.149">

        <Button
            android:id="@+id/id_advice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:backgroundTint="#00151515"
            android:text="도움말"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_use"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:backgroundTint="#00151515"
            android:text="이용약관"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:backgroundTint="#00151515"
            android:text="위치기반 서비스 이용약관"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:backgroundTint="#00151515"
            android:text="서비스 이용동의"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_individual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:backgroundTint="#00151515"
            android:text="개인정보처리방침"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_management"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:backgroundTint="#00151515"
            android:text="운영정책"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:backgroundTint="#00151515"
            android:text="힐링 메이트 소개"
            android:textColor="@color/black" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>